<h1>Review for <%= @restaurant.name %> </h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, as: :select, collection: [ "1", "2", "3", "4", "5"], include_blank:  "Select a Rating" %>
  <%= f.input :content, input_html: { placeholder: "Your Review" } %>
  <%= f.submit "add a review", class: "btn btn-primary" %>
<% end %>


